<body>
    <!-- Loading animation -->
    <div class="loading" id="loading">
        <div class="spinner"></div>
    </div>

    <!-- Love elements in background -->
    <div class="love" style="top: 10%; left: 5%;">❤️</div>
    <div class="love" style="top: 20%; right: 10%; animation-delay: 0.5s;">❤️</div>
    <div class="love" style="top: 40%; left: 15%; animation-delay: 1s;">❤️</div>
    <div class="love" style="bottom: 30%; right: 5%; animation-delay: 1.5s;">❤️</div>
    <div class="love" style="bottom: 15%; left: 20%; animation-delay: 2s;">❤️</div>
    <div class="love" style="top: 15%; right: 20%; animation-delay: 2.5s;">❤️</div>
    
    <!-- Halaman utama dengan angka 7 -->
    <div class="number-seven">7</div>
    <button class="btn" id="showGameBtn">Klik Here</button>
    
    <!-- Halaman game (awalnya tersembunyi) -->
    <div class="game-container" id="gameContainer">
        <h1 class="game-title">Tebak Siapa Inisialnya?</h1>
        <div class="input-container">
            <input type="text" class="input-field" id="answerInput" placeholder="Masukkan inisial di sini" maxlength="1">
        </div>
        <button class="submit-btn" id="submitAnswer">Submit Jawaban</button>
        <div class="result" id="result"></div>
        <button class="back-btn" id="backBtn">Kembali ke Angka 7</button>
    </div>

    <script>
        // Elemen DOM
        const showGameBtn = document.getElementById('showGameBtn');
        const gameContainer = document.getElementById('gameContainer');
        const answerInput = document.getElementById('answerInput');
        const submitAnswer = document.getElementById('submitAnswer');
        const result = document.getElementById('result');
        const backBtn = document.getElementById('backBtn');
        const numberSeven = document.querySelector('.number-seven');
        const loading = document.getElementById('loading');

        // Tampilkan loading sebentar saat halaman dimuat
        window.addEventListener('load', function() {
            loading.style.display = 'flex';
            setTimeout(() => {
                loading.style.display = 'none';
            }, 1000);
        });
        
        // Tampilkan game saat tombol diklik
        showGameBtn.addEventListener('click', function() {
            numberSeven.style.display = 'none';
            showGameBtn.style.display = 'none';
            gameContainer.style.display = 'block';
            answerInput.focus();
        });
        
        // Kembali ke halaman utama
        backBtn.addEventListener('click', function() {
            gameContainer.style.display = 'none';
            numberSeven.style.display = 'block';
            showGameBtn.style.display = 'block';
            result.textContent = '';
            answerInput.value = '';
        });
        
        // Cek jawaban
        submitAnswer.addEventListener('click', function() {
            const answer = answerInput.value.toUpperCase();
            
            if (answer === 'G') {
                result.textContent = 'Benar!';
                result.className = 'result correct';
                createConfetti();
            } else if (answer === '') {
                result.textContent = 'Masukkan jawaban terlebih dahulu!';
                result.className = 'result wrong';
            } else {
                result.textContent = 'Salah! Coba lagi.';
                result.className = 'result wrong';
            }
        });
        
        // Submit dengan tombol Enter
        answerInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                submitAnswer.click();
            }
        });
        
        // Fungsi untuk membuat confetti
        function createConfetti() {
            const colors = ['#ff4081', '#f50057', '#d1005e', '#ff79ae', '#ff9a9e'];
            
            for (let i = 0; i < 100; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.animation = `confettiFall ${(Math.random() * 3 + 2).toFixed(2)}s linear forwards`;
                confetti.style.animationDelay = Math.random() * 2 + 's';
                
                document.body.appendChild(confetti);
                
                // Hapus confetti setelah animasi selesai
                setTimeout(() => {
                    if (confetti.parentNode) {
                        confetti.parentNode.removeChild(confetti);
                    }
                }, 5000);
            }
        }
        
        // Membuat lebih banyak love di background
        function createLoves() {
            for (let i = 0; i < 10; i++) {
                const love = document.createElement('div');
                love.classList.add('love');
                love.textContent = '❤️';
                
                // Posisi acak
                const xPos = Math.random() * 100;
                const yPos = Math.random() * 100;
                
                love.style.left = xPos + '%';
                love.style.top = yPos + '%';
                
                // Animasi acak
                const delay = Math.random() * 4;
                const duration = 5 + Math.random() * 5;
                love.style.animationDelay = delay + 's';
                love.style.animationDuration = duration + 's';
                
                document.body.appendChild(love);
            }
        }
        
        // Panggil fungsi untuk membuat love
        createLoves();

        // Optimasi performa
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                // Hentikan animasi saat tab tidak aktif
                document.querySelectorAll('.love, .number-seven').forEach(el => {
                    el.style.animationPlayState = 'paused';
                });
            } else {
                // Lanjutkan animasi saat tab aktif
                document.querySelectorAll('.love, .number-seven').forEach(el => {
                    el.style.animationPlayState = 'running';
                });
            }
        });
    </script>
</body>
</html>
