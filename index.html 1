        /* Love elements di background */
        .love {
            position: absolute;
            font-size: 28px;
            color: rgba(255, 255, 255, 0.5);
            z-index: 0;
            animation: float 8s infinite ease-in-out;
        }
        
        @keyframes float {
            0%, 100% { 
                transform: translateY(0) rotate(0deg); 
                opacity: 0.7;
            }
            50% { 
                transform: translateY(-40px) rotate(20deg); 
                opacity: 1;
            }
        }
        
        /* Angka 7 dengan animasi naik turun */
        .number-seven {
            font-size: 320px;
            font-weight: bold;
            color: #d1005e;
            text-shadow: 8px 8px 0px #ff79ae,
                         15px 15px 0px rgba(255, 121, 174, 0.4);
            line-height: 1;
            position: relative;
            z-index: 2;
            animation: bounce 2.5s infinite ease-in-out;
            font-family: 'Arial Black', Arial, sans-serif;
            margin-bottom: 30px;
        }
        
        @keyframes bounce {
            0%, 100% { 
                transform: translateY(0); 
            }
            50% { 
                transform: translateY(-40px); 
            }
        }
        
        /* Tombol Klik Here */
        .btn {
            background: linear-gradient(to right, #ff4081, #f50057);
            color: white;
            border: none;
            padding: 18px 50px;
            font-size: 1.5rem;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(213, 0, 77, 0.4);
            position: relative;
            z-index: 2;
            font-weight: bold;
            letter-spacing: 1px;
        }
        
        .btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(213, 0, 77, 0.6);
        }
        
        .btn:active {
            transform: translateY(2px);
        }
        
        /* Halaman Game (Awalnya Tersembunyi) */
        .game-container {
            display: none;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(206, 92, 132, 0.5);
            padding: 40px;
            text-align: center;
            max-width: 500px;
            width: 90%;
            position: relative;
            z-index: 10;
            margin: 20px;
        }
        
        .game-title {
            color: #d81b60;
            margin-bottom: 25px;
            font-size: 2.2rem;
        }
        
        .input-container {
            margin: 25px 0;
        }
        
        .input-field {
            width: 100%;
